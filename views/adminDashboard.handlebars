<!DOCTYPE html>
<html>
	<head>
		<title>Dashboard</title>
		<link rel="stylesheet" type="text/css" href="./css/style.css">
	</head>

	<body>
		{{> headerMenu}}
		<div id="customerParentDiv">

			<div class="bodyDiv rowDiv">
				<div class="columnDiv">
					<div id="custDiv" class="columnDiv roundBorder"></div>
					<div id="addCustDiv" class="columnDiv roundBorder">
						<form action="/addCustomer" method="POST" enctype="application/x-www-form-urlencoded">
							<fieldset>
								<legend>Add Customer:</legend>
							<div class="rowDiv">
								<div>
									<label for="fname" class="saleElMargin">First Name</label><br>
									<input type="text" id="fname" name="fname" class="saleElMargin roundBorder" required>
								</div>
								<div>
									<label for="lname" class="saleElMargin">Last Name</label><br>
									<input type="text" id="lname" name="lname" class="saleElMargin roundBorder" required>
								</div>
							</div>
							{{#if custAddError}}
							<div><span class="warning">Email already registered to this location</span></div>
							{{/if}}
							<div>
								<label for="email" class="saleElMargin">Email</label>
								<input type="text" id="email" name="email" class="saleElMargin roundBorder" required>
							</div>
							<div>
								<input type="submit">
							</div>
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
		<div id="itemLocationMessage" class="saleElMargin"></div>
					<div class="rowDiv itemLineHeight">
						<div class="itemBrandColumn saleElMargin"><strong>Brand</strong></div>
						<div class="itemNameColumn saleElMargin"><strong>Name</strong></div>
						<div class="itemCategoryColumn saleElMargin"><strong>Category</strong></div>
						<div class="itemStockColumn saleElMargin"><strong>Available</strong></div>
						<div class="itemPriceColumn saleElMargin"><strong>Price</strong></div>
					</div>
			<div id="itemListDiv"></div>


		<div id="editItemButton" class="saleElMargin expand roundBorder">
			<h3>Edit Item</h3>
			</div>
			<div id="editItemDiv"></div>



			<div id="receiveOrderSelector" class="saleElMargin expand roundBorder">
				<h3>Receive Order</h3>
			</div>
		<div id="receiveOrder">
			<div>
				<label for="findItem" class="saleElMargin">Search for Item</label>
				<input type="text" id="findItem" class="saleElMargin roundBorder" name="findItem">
			</div>
			<div>
				<div class="rowDiv">

					<div class="itemBrandColumn saleElMargin"><strong>Brand</strong></div>
					<div class="itemNameColumn saleElMargin"><strong>Name</strong></div>
					<div class="itemCategoryColumn saleElMargin"><strong>Category</strong></div>
					<div class="itemReceivedColumn saleElMargin"><strong>Quantity Received</strong></div>
					<div class="submitReceivedColumn saleElMargin"><strong>Submit</strong></div>
				</div>
				<div id="receiveOrderItems"></div>
			</div>
			hello
		</div>


			<div id="addItemSelector" class="saleElMargin expand roundBorder">
				<h3>Add Item</h3>
			</div>
			<div id="addItemDiv" class="saleElMargin">
		<div class="columnDiv">
			<div>Add Item:</div>
			<form action="/addItem" id="addItem" method="POST" enctype="application/x-www-form-urlencoded">
				<div>
				<label for="itemName">Item name</label><br>
				<input type="text" name="itemName" id="itemName" placeholder="Nothingness">
				</div>
				<div>
				<label for="brand">Brand</label><br>
				<input type="text" name="itemBrand" id="itemBrand" placeholder="Nothing Corp">
				</div>
				<div>
				<label for="category">Category</label><br>
				<input type="text" name="itemCategory" id="itemCategory" placeholder="nothing">
				</div>
				<div>
				<label for="size">Size</label><br>
				<input type="text" name="itemSize" id="itemSize" placeholder="0">
				</div>

				<div>
					<label for="price">Price</label>
					<input type="number" name="itemPrice" id="itemPrice" min="0" step=".01" placeholder="7.54">
				</div>
				<div>
					<label for="qty">Quantity</label>
					<input type="number" name="itemQty", id="itemQty" placeholder="2">
				</div>
				<div>
					<input type="submit" value="Create Item">
				</div>
			</form>
		</div>
	</div>
		<div id="addEmployeeSelector" class="saleElMargin expand roundBorder">
			<h3>Add Employee</h3></div>
		<div id="addEmployee">
			<form action="/addEmployee" method="POST" enctype="application/x-www-form-urlencoded">
				<div>
					<div class="rowDiv saleElMargin">
						<div class="saleElMargin">
							<!-- <label for="empFName">First Name</label> -->
							<input type="text" name="empFName" placeholder="First Name" required>
						</div>
						<div class="saleElMargin">
							<input type="text" name="empLName" placeholder="Last Name" required>
						</div>
						<div class="saleElMargin">
							{{#if empEmailErr}}
							<div class="warning">Email already exists</div>
							{{/if}}
							<input type="email" name="empEmail" placeholder="email" required>
						</div>
						<div class="saleElMargin">
							{{#if empPasswordErr}}
							<div class="warning">Incorrect password syntax</div>
							{{/if}}
							<input type="password" name="empPassword" placeholder="Password" required>
						</div>
					</div>
					<div class="saleElMargin">
						<h4>Select Role</h4>
						<input type="radio" id="admin" name="empRole" value="admin" required>
						<label for="manager">Admin</label>
					</div>
					<input type="hidden" id="locationToRegisterEmp" name="locationToRegisterEmp">
					<div class="saleElMargin">
						<input type="radio" id="general" name="empRole" value="general" required>
						<label for="general">General</label>
					</div>
					<div>
						<input type="submit" value="Submit">
					</div>
				</div>
			</form>
		</div>
	</body>

	<script src="./js/adminDashboardScript.js" type="text/javascript"></script>
</html>
