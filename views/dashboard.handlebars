<!DOCTYPE html>
<html>
	<head>
		<title>Sales</title>
		<link rel="stylesheet" type="text/css" href="./css/style.css">
	</head>

	<body>
		{{> headerMenu}}
		<div id="customerParentDiv">

			<div class="bodyDiv rowDiv">
				<div class="columnDiv">
					<div id="custDiv" class="columnDiv roundBorder"></div>
					<div id="addCustDiv" class="columnDiv roundBorder">
						<form action="/addCustomer" method="POST" enctype="application/x-www-form-urlencoded">
							<fieldset>
								<legend>Add Customer:</legend>
							<div class="rowDiv">
								<div>
									<label for="fname" class="saleElMargin">First Name</label><br>
									<input type="text" id="fname" name="fname" class="saleElMargin roundBorder" required>
								</div>
								<div>
									<label for="lname" class="saleElMargin">Last Name</label><br>
									<input type="text" id="lname" name="lname" class="saleElMargin roundBorder" required>
								</div>
							</div>
							{{#if custAddError}}
							<div><span class="warning">Email already registered to this location</span></div>
							{{/if}}
							<div>
								<label for="email" class="saleElMargin">Email</label>
								<input type="text" id="email" name="email" class="saleElMargin roundBorder" required>
							</div>
							<div>
								<input type="submit">
							</div>
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
		<div id="itemLocationMessage"></div>
					<div class="rowDiv itemLineHeight">
						<div class="itemBrandColumn saleElMargin"><strong>Brand</strong></div>
						<div class="itemNameColumn saleElMargin"><strong>Name</strong></div>
						<div class="itemCategoryColumn saleElMargin"><strong>Category</strong></div>
						<div class="itemStockColumn saleElMargin"><strong>Available</strong></div>
						<div class="itemPriceColumn saleElMargin"><strong>Price</strong></div>
						<div class="itemSelectButton saleElMargin"><strong>Add</strong></div>
					</div>
			<div id="itemListDiv"></div>
			<div id="addItemDiv">
		<div class="columnDiv">
			<div>Add Item:</div>
			<form action="/addItem" id="addItem" method="POST" enctype="application/x-www-form-urlencoded">
				<div>
				<label for="itemName">Item name</label><br>
				<input type="text" name="itemName" id="itemName" placeholder="Nothingness">
				</div>
				<div>
				<label for="brand">Brand</label><br>
				<input type="text" name="itemBrand" id="itemBrand" placeholder="Nothing Corp">
				</div>
				<div>
				<label for="category">Category</label><br>
				<input type="text" name="itemCategory" id="itemCategory" placeholder="nothing">
				</div>
				<div>
				<label for="size">Size</label><br>
				<input type="text" name="itemSize" id="itemSize" placeholder="0">
				</div>

				<div>
					<label for="price">Price</label>
					<input type="number" name="itemPrice" id="itemPrice" min="0" step=".01" placeholder="7.54">
				</div>
				<div>
					<label for="qty">Quantity</label>
					<input type="number" name="itemQty", id="itemQty" placeholder="2">
				</div>
				<div>
					<input type="submit" value="Create Item">
				</div>
			</form>
		</div>
	</div>
	</body>

	<script src="./js/dashboardScript.js" type="text/javascript"></script>
</html>
